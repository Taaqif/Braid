
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true" android:focusableInTouchMode="true">


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:context="ict376.murdoch.edu.au.braid.AddManuallyActivityFragment"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="81dp">

            <!-- TODO: Update blank fragment layout -->


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="187dp"

                    android:orientation="vertical"
                    android:paddingLeft="10sp"
                    android:paddingRight="10sp"
                    android:paddingTop="20sp">


                    <ImageView
                        android:id="@+id/iv_coverThumbnail"
                        android:layout_width="100dp"
                        android:layout_height="115dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginRight="20dp"
                        app:layout_constraintBottom_toTopOf="@+id/et_pubdate"
                        app:layout_constraintRight_toRightOf="@+id/et_genre"
                        app:layout_constraintTop_toTopOf="@+id/tv_isbn"
                        app:layout_constraintVertical_bias="0.6"
                        app:srcCompat="@android:color/black" />

                    <Button
                        android:id="@+id/button_takeCoverPhoto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#4a70cb"
                        android:text="Take Photo"
                        android:textColor="#ffffff"
                        android:textSize="10sp" />


                </LinearLayout>

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:text="Extra Details"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <TextView
                    android:id="@+id/tv_totalPages"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginLeft="23dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="0dp"
                    android:paddingTop="10dp"
                    android:text="@string/textView_totalpages" />

                <TextView
                    android:id="@+id/tv_currentPage"
                    android:layout_width="wrap_content"
                    android:layout_height="52dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="1dp"
                    android:paddingTop="10dp"
                    android:text="@string/textView_currentpage" />

                <TextView
                    android:id="@+id/tv_publisher"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:paddingTop="10dp"
                    android:text="@string/textView_publisher" />

                <TextView
                    android:id="@+id/tv_publishedDate"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:paddingTop="10dp"
                    android:text="@string/textView_publisheddate" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:paddingTop="10dp"
                    android:text="@string/textView_rating" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="10sp"
                android:layout_marginRight="10sp"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="212dp"
                    android:orientation="vertical"
                    android:paddingTop="20sp">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Main Details"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                    <EditText
                        android:id="@+id/et_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:hint="Title"
                        android:inputType="text"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                    <EditText
                        android:id="@+id/et_author"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:ems="10"
                        android:hint="Author"
                        android:inputType="text"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                    <EditText
                        android:id="@+id/et_isbn"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:ems="10"
                        android:hint="ISBN"
                        android:inputType="text"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                </LinearLayout>


                <EditText
                    android:id="@+id/et_totalpages"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:ems="10"
                    android:hint="Total Pages"
                    android:inputType="number"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    tools:text="0" />

                <EditText
                    android:id="@+id/et_currentpage"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:editable="false"
                    android:ems="10"
                    android:hint="Current Page"
                    android:inputType="number"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    tools:text="0" />

                <SeekBar
                    android:id="@+id/et_currentpageSeek"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/et_publisher"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:ems="10"
                    android:hint="Publisher"
                    android:inputType="text"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                <EditText
                    android:id="@+id/et_pubdate"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginTop="1dp"
                    android:ems="10"
                    android:hint="Date Published"
                    android:inputType="date"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                <RatingBar
                    android:id="@+id/et_rating"
                    style="@style/Widget.AppCompat.RatingBar.Indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isIndicator="false"
                    android:numStars="5"
                    android:stepSize="1" />


            </LinearLayout>


        </LinearLayout>
    </ScrollView>
